{
    "name": "matt/php-unit-test",
    "description": "Belajar PHP Unit Test",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Matt\\PhpUnitTest\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Rachmat Ardico Perdana",
            "email": "rahmatardiko99@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "9.5.25"
    },
    "autoload-dev": {
        "psr-4": {
            "Matt\\PhpUnitTest\\": "tests/"
        }
    },
    "scripts": {
        "test" : "phpunit --configuration phpunit.xml",
        "test:product" : "phpunit --configuration phpunit.xml --testsuite product",
        "test:counter" : "phpunit --configuration phpunit.xml --testsuite counter"
    }
}
